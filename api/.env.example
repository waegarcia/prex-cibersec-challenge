# Configuración para la API con base de datos
# Completa este archivo con tus credenciales y renómbralo a .env

# URL de conexión a la base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:TuPassword@db:5432/sysinfo

# Configuración de Flask
FLASK_APP=api_server.py
# development para debug, production lo desactiva
FLASK_ENV=production

# Variables para Docker Compose
DB_USER=postgres
DB_PASSWORD=TuPassword
DB_NAME=sysinfo
DB_HOST=db
DB_PORT=5432

# Configuración de seguridad
API_SECRET=TuClaveSecreta